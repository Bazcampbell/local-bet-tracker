{
  "name": "local-bet-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:api": "node server-sqlite.js",
    "start": "node server-sqlite.js",
    "electron:dev": "concurrently -k \"npm run start:api\" \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "start:electron": "electron .",
    "seed-db": "node scripts/seed_db.js",
    "build:electron": "npm run build && electron-builder --mac",
    "dist:mac": "npm run build && electron-builder -m",
    "package:mac": "npm run seed-db && npm run dist:mac"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "recharts": "^3.6.0",
    "sqlite3": "^5.1.6",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.localbet.tracker",
    "productName": "Local Bet Tracker",
    "files": [
      "dist/**",
      "server-sqlite.js",
      "data/**",
      "node_modules/**",
      "src/assets/**"
    ],
    "extraResources": ["data/**"],
    "mac": {
      "target": ["dmg", "zip"]
    }
  }
}
